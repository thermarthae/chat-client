{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"lib": [
			"es5",
			"es6",
			"esnext",
			"dom"
		],
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist/",
		"removeComments": true,
		"downlevelIteration": true,
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"Components": [
				"src/components"
			],
		},
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}